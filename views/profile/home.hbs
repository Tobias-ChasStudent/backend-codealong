<h2>Välkommen {{user.username}}</h2>

<h3>Här är dina påbörjade lärostigar. Lycka till!</h3>

{{#if learningPaths}}
{{#each learningPaths}}

<div class="path">
    <h4>{{learningPath.title}}</h4>
    <h5 class="steps-count-container"><b>Steg:</b> <span class="steps-count"></span></h5>
    <div class="progress-bar-container">
        <div class="progress-bar" style="background-color: green;"></div>
    </div>
    <p>{{learningPath.desc}}</p>
    <ol>
        {{#each learningPath.steps}}
        <li>
            <p>
                {{#if done}}
                <input type="checkbox" class="complete-step" data-step-id="{{_id}}" data-path-id="{{../_id}}" data-done="true" checked>
                {{else}}
                <input type="checkbox" class="complete-step" data-step-id="{{_id}}" data-path-id="{{../_id}}" data-done="false" >
                {{/if}}
                <b>{{title}}</b>
            </p>
            {{desc}}

            <p>
                <a href="{{link}}" target="_blank">Länk till kursen</a>
            </p>
        </li>
        {{/each}}
    </ol>

</div>
<hr />

{{/each}}
{{/if}}